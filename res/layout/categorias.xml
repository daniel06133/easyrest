<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLCategorias"
    android:background="#314550">

    <LinearLayout
			android:layout_width="fill_parent"
			android:orientation="horizontal" 
			android:id="@+id/linearLTitulo" 
			android:background="#476B85"
		    android:layout_height="80dp">
		    <ImageButton
			        android:id="@+id/btnLogo"
			        android:layout_width="75dp"
			        android:layout_height="match_parent"
			        android:layout_gravity="center_vertical"
			        android:layout_marginLeft="25dp"
			        android:background="#476B85"
			        android:gravity="left"
			        android:scaleType="fitXY"
			        android:src="@drawable/logo"/>
			<TextView
			          android:id="@+id/txtCategorias"
			          android:layout_width="match_parent"
			          android:layout_height="match_parent"
			          android:layout_gravity="center_horizontal|center_vertical"			       
				      android:background="#476B85"
				      android:gravity="center"
			          android:textColor="#FFFFFF"
			          android:textSize="50sp"
			          android:textStyle="bold"
			          android:text="CategorÃ­as" 
			          android:layout_marginLeft="25dp"/>
	</LinearLayout>
	 <LinearLayout
			    android:id="@+id/linearGrilla"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:background="#314550"
			    android:orientation="vertical" >				
    <GridView
          android:id="@+id/gvCategorias"
          android:layout_width="fill_parent"
          android:layout_height="match_parent"
          android:clickable="true"
          android:background="#314550"
          android:drawSelectorOnTop="true"
          android:focusable="true"
          android:gravity="center"
          android:layout_gravity="center_horizontal|center_vertical"
          android:numColumns="2"
          android:columnWidth="300dip"
          android:stretchMode="spacingWidthUniform"
          android:horizontalSpacing="5dip"
          android:layout_marginLeft="10dp">

        
    </GridView>
    </LinearLayout>
    	<!--android:layout_margin="5dp"
          android:stretchMode="columnWidth"
          android:verticalSpacing="10dp"
          android:horizontalSpacing="10dp"-->

</LinearLayout>
