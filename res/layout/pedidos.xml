<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLPedidos" >

				    <LinearLayout
				        android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal" 
					    android:background="#5173DA"
					    android:id="@+id/linearLTitulo" >
					    			<TextView
						            android:id="@+id/txtNroMesa"
						            android:layout_width="match_parent"
						            android:layout_height="match_parent"
						            android:layout_weight="0.6"
						            android:gravity ="left"
						            android:background="#5173DA"
						            android:textColor="#FFFFFF"
						            android:textSize="40sp"
						            android:textStyle="bold"
						            android:text="Mesa " 
						            android:layout_marginLeft="25dp"/>
							   		 <ImageButton
							        android:id="@+id/imgOk"
							        android:layout_width="150dp"
							        android:layout_height="wrap_content"
							        android:layout_weight="0.4"							    
							        android:background="#5173DA"
							        android:src="@drawable/icono_ok"
							        android:layout_marginRight="25dp" />
									
									
					</LinearLayout>		
					

					<ListView
					    android:id="@android:id/list"
					    android:layout_width="match_parent"
					    android:layout_height="500dp"
					    android:layout_weight="0.8"
					    android:layout_marginLeft="25dp"
					    android:layout_marginRight="25dp"
					    android:layout_marginTop="25dp"
					    android:layout_marginBottom="25dp" 
					    android:background="#A5BAE1"
					    android:bottomRightRadius="100dp"
						android:bottomLeftRadius="100dp"
						android:topLeftRadius="100dp"
						android:topRightRadius="100dp"
						android:divider="#000000"
   						android:dividerHeight="1.5px">
					</ListView>
					
					<TextView
		            android:id="@+id/txtMensajeSinPedidos"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_weight="0.05"
		            android:gravity ="center"
		            android:text=""/>

												   
					
					
					
</LinearLayout>
